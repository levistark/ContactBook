<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactBookMaui.MainPage"
             
             BackgroundColor="Black">

    <Grid RowDefinitions="auto, *" Margin="30">
        <VerticalStackLayout>
            <Label Text="Ange ditt namn" Margin="0,0,0,10" TextColor="White"/>
            <Entry Margin="0,0,0,10" BackgroundColor="Transparent" TextColor="White" Frame=""/>
            <Button x:Name="Button_Add" Text="Lägg till" Clicked="Button_Add_Clicked"/>


            <Border Stroke="DarkGrey" StrokeThickness="2" Margin="0,10,0,0" Padding="10,10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,45,45,0" />
                </Border.StrokeShape>
                <Entry Placeholder="Add a to do" x:Name="Entry_Name" TextColor="White" />
            </Border>
            
            
        </VerticalStackLayout>
    </Grid>

</ContentPage>
