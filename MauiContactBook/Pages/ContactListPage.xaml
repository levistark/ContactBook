<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiContactBook.Pages.ContactListPage"
             
             xmlns:viewmodels="clr-namespace:MauiContactBook.ViewModels"
             x:DataType="{x:Type viewmodels:ContactListViewModel}"
             
             Title="ContactListPage"
             Shell.NavBarIsVisible="False">
    
    <VerticalStackLayout Margin="30">

        <Label 
            Text="Your Contacts"
            FontSize="30"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="0,0,0,20"/>

        <Button Text="Add Contact" Command="{Binding NavigateToAddCommand}"/>
    </VerticalStackLayout>
</ContentPage>